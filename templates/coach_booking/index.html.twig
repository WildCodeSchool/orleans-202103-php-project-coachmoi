
{% extends 'layout_superadmin.html.twig' %}

{% block title %}Gérer les demandes{% endblock %}

{% block content %}

    <h1 class="mt-5">GÉRER LES DEMANDES</h1>

    <div class="mb-5 col-md-4 offset-md-8 d-flex justify-content-end">
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<button class="btn bg-success text-light float-end mt-3">Search</button>
			{{ form_end(form) }}
	</div>

    <table class="table text-center bg-light">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Client</th>
                <th scope="col">Date</th>
                <th scope="col">Activité</th>
                <th scope="col">Budget</th>
                <th scope="col">Contact</th>
                <th scope="col">Statut</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach_booking in coach_bookings %}
            <tr>
                <td scope="row">{{ coach_booking.id }}</td>
                <td>{{ coach_booking.client.user.firstname }} {{ coach_booking.client.user.lastname }}</td>
                 <td>{{ coach_booking.createdAt|date("d/m/Y") }}</td>
                <td>{{ coach_booking.client.activity.name }}</td>
                <td>{{ coach_booking.client.budget }}</td>
                <td>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{ coach_booking.client.user.email }} </li>
                        <li class="list-group-item">{{ coach_booking.client.user.telephone }} </li>
                    </ul>
                </td>
                <td class="align-self-center">
                    <p class="d-inline-flex text-success border border-success p-2 m-1">{{ coach_booking.bookingStatus.status }}</p>
                    <form method="post" action="{{ path('cb_update_status', {"id": coach_booking.id}) }}">
                        <select name="bookingStatus" id="bookingStatus" class="bg-secondary p-1 m-1">
                            <option value="">Mettre à jour</option>
                            {% for status_detail in bookingStatus %}
                            <option {% if coach_booking.bookingStatus.status == status_detail %} selected {% endif %} value="{{ status_detail.id }}">{{ status_detail.status }}</option>
                            {% endfor %}
                        </select>
                        <input type="hidden" name="_token" value="{{ csrf_token('cb_update_status' ~ coach_booking.id) }}">
                        <button class="btn bg-success text-light fs-6">Valider</button>
                    </form>
                </td>
                <td>
                    <a href="{{ path("coach_booking_show", {"id": coach_booking.id}) }}" class="btn bg-success text-light fs-6">Gérer la demande</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}