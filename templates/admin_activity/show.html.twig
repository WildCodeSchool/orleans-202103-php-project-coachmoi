{% extends 'layout_superadmin.html.twig' %}

{% block title %}Afficher une activité{% endblock %}

{% block content %}
<div class="container">
    <h1>Activité {{ activity.name }}</h1>

    <table class="table m-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>

                <td><img src="{{ vich_uploader_asset(activity) }}" width="100vh"></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-start">
        <a class="btn bg-success text-light me-3" href="{{ path('admin_activity_edit', {'id': activity.id}) }}">Éditer</a>
        {{ include('admin_activity/_delete_form.html.twig') }}
    </div>
    </br>
    <a class="text-success fst-italic fw-bold mt-5" href="{{ path('admin_activity_index') }}">Retour à la liste des activités</a>
</div>
{% endblock %}
