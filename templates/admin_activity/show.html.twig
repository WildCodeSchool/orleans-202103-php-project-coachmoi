{% extends 'base.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <table class="table m-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ activity.photo }}</td>
            </tr>
            <tr>
                <th>Mis en avant </th>
                <td>{{ activity.isFeatured ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_activity_edit', {'id': activity.id}) }} " class="btn btn-success text-light m-3">Modifier</a>

    {{ include('admin_activity/_delete_form.html.twig') }}

    <a href="{{ path('admin_activity_index') }}" class="m-3">Retour à la liste</a>
{% endblock %}
