{% extends 'layout_superadmin.html.twig' %}

{% block title %}Détail de l'espace {{ training_space.name }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Espace {{ training_space.name }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training_space.id }}</td>
            </tr>
            <tr>
                <th>Nome de l'espace</th>
                <td>{{ training_space.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ training_space.photo }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training_space.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ training_space.address }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-start">
        <a class="btn bg-success text-light me-3" href="{{ path('admin_space_edit', {'id': training_space.id}) }}">Éditer</a>
            {{ include('admin_space/_delete_form.html.twig') }}
    </div>
    </br>
    <a class="text-success fw-bold fs-5" href="{{ path('admin_space_index') }}">Retour à la liste des espaces</a>

{% endblock %}
