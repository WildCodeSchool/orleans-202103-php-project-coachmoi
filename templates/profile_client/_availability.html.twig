{# Section: Mes disponibilités: afficher tous les disponibilités du client #}
<div class="mes-availabilities border border-dark rounded m-1">
    <div class="profile-h2 border border-dark rounded d-flex align-items-center bg-dark w-75 p-0">
        <h2 class="m-2 text-light"><i class="bi bi-calendar3 text-success"></i> Mes disponibilités</h2>
    </div>
    <div class="d-flex justify-content-end">
        <a href="{{ path('client_availability_index') }}" class="btn btn-success m-3 text-light"><i class="bi bi-pencil-square text-white"></i> &nbsp; Changer mes disponibilités</a>
    </div>
    <div>
    <div>
       <div class="bg-light m-3 border rounded">
            <table class="table text-center">
                <thead>
                    <tr class="fs-4">
                        <th scope="col">#</th>
                        <th scope="col">Jour</th>
                        <th scope="col">L'heure de début</th>
                        <th scope="col">L'heure de fin</th>
                    </tr>
                </thead>
                <tbody>
                    {% if app.user.client %}
                        {% for availability in app.user.client.availabilities %}
                            <tr class="fs-5">
                                <th scope="row">{{ loop.index }}</th>
                                <td>{{ availability.weekday.name }}</td>
                                <td>{{ availability.startTime|format_time() }}</td>
                                <td>{{ availability.endTime|format_time() }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>