{% extends 'layout_superadmin.html.twig' %}

{% block title %}Hello {{ app.user.firstname }} !{% endblock %}

{% block body %}
<main class="col-md-10 mx-auto my-5">
    <h1>✅ Hello {{ app.user.firstname }} !</h1>

    <div class="row w-100 align-items-center">
        <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <a href="{{ path('superadmin_show_users') }}" class="btn text-success">Gestion des utilisateurs</a>
                </div>
                <p class="card-text text-center">Consulter la liste des utilisateurs, éditer et attribuer les
                    rôles</p>
            </div>
        </div>

         <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center ">
                    <a href="{{ path('superadmin_show_clients') }}" class="btn text-success">Gestion des clients</a>
                </div>
                <p class="card-text text-center">Consulter la liste des clients.</p>
            </div>
        </div>

        <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <a href="{{ path('superadmin_show_coachs') }}" class="btn text-success">Gestion des coachs</a>
                </div>
               <p class="card-text text-center">Consulter la liste des coachs.</p>
            </div>
        </div>

         <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <a href="{{ path('admin_activity_index') }}" class="btn text-success">Gestion des activités</a>
                </div>
               <p class="card-text text-center">Consulter la liste des activités, éditer et supprimer.</p>
            </div>
        </div>

       <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <a href="{{ path('admin_space_index') }}" class="btn text-success">Gestion des espaces</a>
                </div>
               <p class="card-text text-center">Consulter la liste des espaces, éditer et supprimer.</p>
            </div>
        </div>

        <div class="space-card my-3 m-auto border border-dark bg-light rounded w-75">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <a href="{{ path('coach_booking_index') }}" class="btn text-success">Gestion des réservations</a>
                </div>
                <p class="card-text text-center">Consulter la liste des demandes, attribuer les coachs et
                    espaces.</p>
            </div>
        </div>
        <div class="space-card w-75 text-start my-3 m-auto">
            <a class= "btn btn-success text-uppercase fw-bold fst-italic text-light my-5" href="{{ path('home') }}">Retour au site</a>
        </div>
    </div>
</main>
{% endblock %}