{% extends 'layout.html.twig' %}

{% block body %}
<main class="container-fluid col-11">
    <h1>Mon espace Coach</h1>
    <div class="d-flex justify-content-end">
        <a href="{{ path('coach_edit') }}" class="btn btn-success m-2">Changer informations</a>
    </div>
    <section class="row">
        <div class="col-lg-6 col-md-12 mt-4">
            {% block information %}
            {% include 'profile_coach/_information.html.twig' %}
            {% endblock %}
        </div>
        <div class="col-lg-6 col-md-12">
            {% block photo %}
                {% include "profile_coach/_photo.html.twig" %}
            {% endblock %}
            <div class="pt-4">
                {% block preferences %}
                    {% include 'profile_coach/_preferences.html.twig' %}
                {% endblock %}
            </div>
            <div class="pt-4">
                {% block coachmoi %}
                    {% include 'profile_coach/_coachmoi.html.twig' %}
                {% endblock %}
            </div>
        </div>
    </section>
    <section>
        {% block availabilitites %}
            {% include 'profile_coach/_availability.html.twig' %}
        {% endblock %}
    </section>
</main>
{% endblock %}
