{% extends 'layout_superadmin.html.twig' %}

{% block title %} Éditer une activité {% endblock %}

{% block content %}
<div class="container">
    <h1>Activité</h1>
    <div class="container">
        <div class="border border-dark m-2">
            <div class="profile-h2 d-flex align-items-center bg-dark rounded w-75 p-0">
                <h2 class="m-2 text-light text-truncate"><i class="bi bi-palette2 text-success"></i> Modifier</h2>
            </div>
                {{ include('admin_activity/_form.html.twig', {'button_label': 'Valider'}) }}
