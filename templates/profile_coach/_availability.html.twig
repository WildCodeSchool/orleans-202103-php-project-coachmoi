{# Section: Mes disponibilités: afficher tous les disponibilités du coach #}
<div class="mes-availabilities container-fluid border col-md-11 border-dark mt-5 rounded">
    <div class="profile-h2 border border-dark d-flex align-items-center bg-light w-75 p-0">
        <h2 class="m-2">Mes disponibilités</h2>
        <i class="bi bi-pencil-square"></i>
    </div>
    <div>
        <div class="bg-light my-2">
            <table class="table text-center">
                <thead>
                    <tr class="fs-4">
                        <th scope="col">#</th>
                        <th scope="col">Jour</th>
                        <th scope="col">L'heure de début</th>
                        <th scope="col">L'heure de fin</th>
                    </tr>
                </thead>
                <tbody>
                    {% for availability in app.user.coach.availabilities %}
                    <tr class="fs-5">
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ availability.weekday.name }}</td>
                        <td>{{ availability.startTime|format_time() }}</td>
                        <td>{{ availability.endTime|format_time() }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>