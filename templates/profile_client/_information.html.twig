<div class="mes-informations border border-dark rounded m-1">
    <div class="profile-h2 border border-dark d-flex align-items-center bg-light w-75 p-0">
        <h2 class="m-2 text-truncate">Mes informations</h2>
    </div>
    <div>
        <div class="bg-light my-2">
            <h3>Nom</h3>
            <p>{{ app.user.lastname }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Prénom</h3>
            <p>{{ app.user.firstname }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Téléphone</h3>
            <p>{{ app.user.telephone }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Email</h3>
            <p class="text-truncate">{{ app.user.email }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Adresse</h3>
            <p>{{ app.user.client.address }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Date de naissance</h3>
            <p>{{ app.user.client.birthdate|date("d/m/Y") }}</p>
        </div>
        <div class="bg-light my-2">
            <h3>Mes documents</h3>
            <div class= "documents d-flex flex-row">
                <div class= "d-flex flex-column align-items-center">
                    <i class="h1 m-1 bi bi-file-earmark-text-fill"></i>
                    <p>CGU</p>
                </div>
                <div class= "d-flex flex-column align-items-center">
                    <i class="h1 m-1 bi bi-file-earmark-text-fill"></i>
                    <p>Contrat</p>
                </div>
            </div>
        </div>
    </div>
</div>