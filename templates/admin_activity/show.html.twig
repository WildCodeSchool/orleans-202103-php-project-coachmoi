{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ activity.photo }}</td>
            </tr>
            <tr>
                <th>IsFeatured</th>
                <td>{{ activity.isFeatured ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_activites_index') }}">back to list</a>

    <a href="{{ path('admin_edit_activite', {'id': activity.id}) }}">edit</a>

    {{ include('admin_activity/_delete_form.html.twig') }}
{% endblock %}
