{% extends 'layout_superadmin.html.twig' %}

{% block title %}Toutes les activités{% endblock %}

{% block body %}
<div class="container">
    <h1>Toutes les activités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Mis en avant</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td><img src="{{ vich_uploader_asset(activity) }}" width="100vh"></td>
                <td>{{ activity.name }}</td>
                <td>{{ activity.description }}</td>
                <td>{{ activity.isFeatured ? 'Yes' : 'No' }}</td>
                <td class="d-flex">
                    <a href="{{ path('admin_activity_show', {'id': activity.id}) }}" class="btn btn-success text-light me-3">Voir</a>
                    <a href="{{ path('admin_activity_edit', {'id': activity.id}) }}" class="btn btn-success text-light">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune activité trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <a href="{{ path('admin_activity_new') }}" class="m-3 btn btn-success text-light">Créer une nouvelle activité</a>

     <p class= "text-uppercase fw-bold fst-italic mt-5 m-3"><a href="{{ path('superadmin_index') }}">Retour à mon espace admin</a></p>
{% endblock %}
