{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ client.birthdate ? client.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Goal</th>
                <td>{{ client.goal }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ client.budget }}</td>
            </tr>
            <tr>
                <th>GroupSize</th>
                <td>{{ client.groupSize }}</td>
            </tr>
            <tr>
                <th>IsApt</th>
                <td>{{ client.isApt ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
