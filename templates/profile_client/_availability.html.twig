{# Section: Mes disponibilités: afficher tous les disponibilités du client #}
<div class="mes-availabilities container-fluid border col-lg-12 col-md-10 border-dark mt-5 rounded mb-5 ">
    <div class="profile-h2 border border-dark d-flex align-items-center bg-light w-75 p-0">
        <h2 class="m-2">Mes disponibilités</h2>
    </div>
    <div class="d-flex justify-content-end">
        <a href="{{ path('client_availability_index') }}" class="btn btn-success m-2">Changer mes disponibilités</a>
    </div>
    <div>
    <div>
        <div class="bg-light my-2">
            <table class="table text-center">
                <thead>
                    <tr class="fs-4">
                        <th scope="col">#</th>
                        <th scope="col">Jour</th>
                        <th scope="col">L'heure de début</th>
                        <th scope="col">L'heure de fin</th>
                    </tr>
                </thead>
                <tbody>
                    {% if app.user.client %}
                        {% for availability in app.user.client.availabilities %}
                            <tr class="fs-5">
                                <th scope="row">{{ loop.index }}</th>
                                <td>{{ availability.weekday.name }}</td>
                                <td>{{ availability.startTime|format_time() }}</td>
                                <td>{{ availability.endTime|format_time() }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>