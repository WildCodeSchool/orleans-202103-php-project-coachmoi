{% extends 'layout_superadmin.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block content %}
<div class="container">
	<h1>Gestion des utilisateurs</h1>

	<table class="table table-striped text-center bg-light">
		<thead>
			<tr>
				<th class="bg-dark text-white">Email</th>
				<th class="bg-dark text-white">Nom</th>
				<th class="bg-dark text-white">Telephone</th>
				<th class="bg-dark text-white">Roles</th>
				<th class="bg-dark text-white">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.email }}</td>
					<td>{{ user.firstname }}
						{{ user.lastname }}</td>
					<td>{{ user.telephone }}</td>
					<td>
                        {{ user.mainRole }}
					</td>
					<td>
						<a href="{{ path('superadmin_edit_user', {'id': user.id}) }}" class="btn btn-success text-light fs-6"><i class="bi bi-pencil-square text-white me-2"></i> Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucun utilisateur trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="text-uppercase fw-bold fst-italic d-flex justify-content-end">
		<a href="{{ path('superadmin_index') }}" class="btn btn-success text-dark"><i class="bi bi-arrow-counterclockwise text-dark"></i> Retour espace admin</a>
	</div>
</div>
{% endblock %}
