{% extends 'layout_admin.html.twig' %}

{% block title %}Admin-Client{% endblock %}
{% block information %}
            {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.birthdate ? client.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ client.address }}</td>
                <td>{{ client.goal }}</td>
                <td>{{ client.budget }}</td>
                <td>{{ client.groupSize }}</td>
                <td>{{ client.isApt ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}