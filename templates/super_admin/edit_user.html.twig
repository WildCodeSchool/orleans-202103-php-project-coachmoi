{% extends 'layout_superadmin.html.twig' %}

{% block title %}Attribuer les rôles{% endblock %}

{% block content %}
<div class="container">
    <h1> Attribuer un rôle </h1>
        <div class="border border-dark m-2">
            <div class="profile-h2 d-flex align-items-center bg-dark rounded w-75 p-0">
                <h2 class="m-2 text-light text-truncate"> <i class="bi bi-people-fill text-success"></i> {{ user.firstname }} {{ user.lastname }}</h2>
            </div>
            <div class="container rounded my-3 mx-3">
                <div class="my-3">
                    {{ form_start(userForm) }}
                        {{ form_errors(userForm.roles) }}
                        {{ form_label(userForm.roles, 'Rôles:') }}
                        {{ form_widget(userForm.roles) }}
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success text-white mx-4"><i class="bi bi-check-square-fill text-white"></i> {{ button_label|default('Valider') }}</button>
                        </div>
                    {{ form_end(userForm) }}
                </div>
            </div>
        </div>
    <div class="d-flex justify-content-end">
        <p class= "text-uppercase fw-bold fst-italic"><a href="{{ path('superadmin_show_users') }}" class="btn btn-success text-dark"><i class="bi bi-arrow-counterclockwise text-dark"></i> Retour liste utilisateurs</a></p>
    </div>
</div>
{% endblock %}